<p>
  <b>Book:</b>
  <%= @example.book.title %>
</p>

<p>
  <b>Publisher:</b>
  <%= @example.publisher.name %>
</p>

<p>
  <b>Publish date:</b>
  <%= @example.publish_date.strftime("%d-%m-%Y") %>
</p>

<p>
  <b>Buy date:</b>
  <%= @example.buy_date.strftime("%d-%m-%Y") %>
</p>

<p>
  <b>Description:</b>
  <%= @example.description %>
</p>

<% if(@example.get_state=="available")  %>
  <%= link_to "reserve",   :controller => "examples", :action => "reserve", :id => @example %>
<%else%>
  <%   if(@example.get_state=="Already reserved") %>
    <%= link_to "unreserve",   :controller => "examples", :action => "unreserve", :example_id => @example.id %>
  <% else %>
    <%= @example.get_state %>
  <% end %>
<% end %>
<br/>
<%if(current_user!=nil && current_user.admin)%>
  <%= link_to 'Edit', edit_example_path(@example) %> |
<%end%>
<%= link_to 'Back', "/back" %>
